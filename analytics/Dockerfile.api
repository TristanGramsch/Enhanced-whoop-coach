FROM python:3.11

WORKDIR /app

# Install deps
RUN pip install --no-cache-dir fastapi==0.110.0 uvicorn[standard]==0.29.0 numpy>=2.0.0

# Copy package files
COPY __init__.py /app/analytics/__init__.py
COPY analyze.py /app/analytics/analyze.py
COPY api.py /app/analytics/api.py

ENV PYTHONPATH=/app

WORKDIR /app
EXPOSE 7000
CMD ["uvicorn", "analytics.api:app", "--host", "0.0.0.0", "--port", "7000"]